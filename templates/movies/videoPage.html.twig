{% extends "home/base.html.twig" %}
{% block head %}
    {{ parent() }}
    <link rel="stylesheet" href="/styles/comments.css" />
{% endblock %}
{% block content %}

<div style="padding-top: 100px;" class="container" >
    <div  class="section-header" >
        {{ video.title }}
    </div>
    <div class="hero-slide-item">

<iframe style="position: absolute;top: 0; right: 0;bottom: 0; left: 0;margin: auto;" width="100%" height="100%" src="{{ video.filepath }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
    </div>
</div>

    <main>
    <div class="comment-section">

            <div class="comment-wrp">
            <div class="comment c-container">
                <div class="c-controls">
                    <a  class="delete"><img src="images/icon-delete.svg" alt="" class="control-icon">Delete</a>
                    <a  class="edit"><img src="images/icon-edit.svg" alt="" class="control-icon">Edit</a>
                </div>
                <div class="c-user">
                    <img src="/film-solid-24.png" alt="" class="usr-img">
                    <p class="usr-name">aymen</p>
                    <p class="cmnt-at">2 weeks ago</p>
                </div>
                <p class="c-text">
                    <span class="c-body">aaaaaaaaaaaaaaaaaaaaaaaaaaa</span>
                </p>
            </div>
            </div>
         <!--commentS wrapper-->
        <div class="reply-input c-container">
            <img src="/film-solid-24.png" alt="" class="usr-img">
            <textarea class="cmnt-input" placeholder="Add a comment..."></textarea>
            <button class="bu-primary">SEND</button>
        </div> <!--reply input-->
    </div> <!--comment sectio-->
</main>
{% endblock %}
