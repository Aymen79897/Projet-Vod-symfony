{% extends "admin/adminHome.html.twig" %}
{% block head %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
{% endblock %}
{% block admincontent %}
    <div class="col py-3">
    <div class="py-5 text-center">
        <h2>Upload Video form</h2>
    </div>

        {{ form_start(form) }}

        <div class="form-group row mb-3">
            <div class="col-sm-4">
                {{ form_label(form.thumbnail) }}

                {{ form_widget(form.thumbnail, {'attr': {'class': 'form-control'}}) }}

            </div>

            <div class="col-sm-8">
                <div class="form-group row mb-3">
                    <div class="col-md-6">
                    {{ form_label(form.title) }}

                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="col-md-6">

                    {{ form_label(form.duration) }}

                    {{ form_widget(form.duration, {'attr': {'class': 'form-control'}}) }}

                </div>
                </div>
                <div class="form-group row mb-3">
                    <div class="col-md-6">
                    {{ form_label(form.rating) }}

                    {{ form_widget(form.rating, {'attr': {'class': 'form-control'}}) }}

                </div>

                    <div class="col-md-6">

                    {{ form_label(form.releaseYear) }}

                    {{ form_widget(form.releaseYear, {'attr': {'class': 'form-control'}}) }}

                </div>
                </div>
        <div class="mb-3">

            {{ form_label(form.filepath) }}

            {{ form_widget(form.filepath, {'attr': {'class': 'form-control'}}) }}

        </div>
        <div class="mb-3">

            {{ form_label(form.description) }}

            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}

        </div>

            </div>
                <div class="py-5 text-center">

            {{ form_label(form.submit) }}

            {{ form_widget(form.submit, {'attr': {'class': 'submit'}}) }}

        </div>



        {{ form_end(form) }}
        </div>

    </div>


{% endblock %}


